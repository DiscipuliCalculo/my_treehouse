extends layout

block content
  h1 #{title}
  form( method='POST' action='' )
    div.form-group
      label( for="first_name" ) First Name:
      input( name="first_name" type='text' required="true" value=( undefined===user ? "" : user.first_name) )
      label( for="last_name" ) Last Name:
      input( name="last_name" type="text" required="true" value=(undefined===user ? "" : user.last_name) )
    div.form-group
      label( for="username" ) Username: 
      input( name="username" type="text" required="true" value=(undefined===user ? "" : user.username) )
      label( for="password" ) Password:
      input( name="password" type="password" required="true" value=(undefined===user ? "" : user.password) )
    div.form-group
      labe( for="password_confirm") Confirm Password:
      input( name="password_confirm" type="password" required="true")
    input(type="submit" value="Submit")
  if errors
    ul
      for error in errors
        li!= error.msg